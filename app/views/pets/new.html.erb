<div class="container">
<%= link_to "Back to shelter", shelter_path(@shelter), class: "btn btn-primary mb-4 back-shelter-btn" %>
<%= simple_form_for [@shelter, @pet]  do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :animal_type %>
  <%= f.input :price_per_day %>
  <%= f.input :gender %>
  <%= f.input :breed %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
